<%= stylesheet_link_tag "main" %>
<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>
<div id='content'>
<table class="table table-striped">	
	<tbody>
		<% @articles.each do |article| %>
		<tr>
			<td><%= image_tag(article.image, size: "250x250") %></td>
			<td rawspan='2'><%= link_to article.title, article.url, :class => "title" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= paginate @articles %>
</div>
